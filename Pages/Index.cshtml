@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}


<form method="post">
    @*<select asp-for="selectedFilter" asp-items="Model.Options" onchange="this.form.submit();"></select>*@
    <fieldset>
        <legend>Network Parameters</legend>
        <div>
            <label for="LayerSizes">Layer Sizes:</label>
            <input type="text" name="LayerSizes" value="@((Model.InvalidParams ?? string.Join(",", Model.NNParams.Select(p=>p.ToString()))))" />
        </div>
    </fieldset>
</form>

<pre class="mermaid">@Model.DiagramContent</pre>
<div>@Html.Raw(Model.DiagramContent.Replace("\n", "<br>\n").Replace("\t", "&nbsp;&nbsp;&nbsp;&nbsp;"))</div>

@*Replace("\n", "<br>").Replace("\t", "&nbsp;&nbsp;")*@

